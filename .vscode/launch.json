{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django",
            "type": "python",
            "request": "launch",
            "module": "manage",
            "args": [
                "runserver",
                "127.0.0.1:8000"
            ],
            "justMyCode": true,
            "console": "integratedTerminal",
            "postDebugTask": "openBrowser"
        }
    ],
    "tasks": [
        {
            "label": "openBrowser",
            "type": "shell",
            "command": "start",
            "args": [
                "http://127.0.0.1:8000"
            ],
            "problemMatcher": []
        }
    ]
}